<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.GMYMembership" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gmy_accent</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/gmy_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/gmy_primary</item>
        <item name="android:colorBackground">@color/gmy_primary</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/gmy_primary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOutline">#B0BEC5</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#B0BEC5</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Theme.GMYMembership" parent="Base.Theme.GMYMembership" />

    <style name="GMYAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/gmy_secondary</item>
        <item name="android:windowTitleStyle">@style/DialogTitleTextStyle</item>
        <item name="android:textViewStyle">@style/DialogBodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogTitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="DialogBodyTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gmy_accent</item>
    </style>

    <style name="GMYCalendarDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/gmy_accent</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/gmy_secondary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DashboardCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">#2C2C2C</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
    </style>
    <style name="DashboardCardContent" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="DashboardCardIcon" parent="">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="DashboardCardTextLayout" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="DashboardCardNumber" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DashboardCardLabel" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/gmy_accent</item>
        <item name="colorPrimary">@color/white</item> 
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item> 
        <item name="android:weekNumberColor">@color/gmy_accent</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/gmy_accent</item> 
    </style>

    <style name="CalendarDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/gmy_accent</item>
        <item name="colorPrimary">@color/gmy_primary</item>
    </style>
</resources>
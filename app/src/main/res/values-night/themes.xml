<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.GMYMembership" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Atributos de color para el modo noche, consistentes con el tema -->
        <item name="colorPrimary">@color/gmy_accent</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/gmy_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/gmy_primary</item>
        <item name="android:colorBackground">@color/gmy_primary</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/gmy_primary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOutline">#B0BEC5</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#B0BEC5</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="GMYAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/gmy_secondary</item>
        <item name="android:windowTitleStyle">@style/DialogTitleTextStyle</item>
        <item name="android:textViewStyle">@style/DialogBodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogTitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="DialogBodyTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gmy_accent</item>
    </style>

    <style name="GMYCalendarDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/gmy_accent</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/gmy_secondary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="SettingsHeader" parent="">
        <item name="android:textColor">@color/gmy_accent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="SettingsItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>